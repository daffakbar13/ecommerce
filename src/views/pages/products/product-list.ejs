<div class="d-flex flex-column flex-root">
	<!--begin::Page-->
	<div class="page d-flex flex-row flex-column-fluid">
		<!--begin::Aside-->
		<%- include('../../components/aside.ejs') %>
			<!--end::Aside-->
			<!--begin::Wrapper-->
			<div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
				<!--begin::Header-->
				<%- include('../../components/header.ejs') %>
					<!--end::Header-->
					<!--begin::Content-->
					<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
						<!--begin::Toolbar-->
						<div class="toolbar" id="kt_toolbar">
							<!--begin::Container-->
							<div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
								<!--begin::Page title-->
								<div data-kt-swapper="true" data-kt-swapper-mode="prepend"
									data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}"
									class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
									<!--begin::Title-->
									<h1 class="d-flex text-dark fw-bolder fs-3 align-items-center my-1">Products
									</h1>
									<!--end::Title-->
									<!--begin::Separator-->
									<span class="h-20px border-gray-300 border-start mx-4"></span>
									<!--end::Separator-->
									<!--begin::Breadcrumb-->
									<ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
										<!--begin::Item-->
										<li class="breadcrumb-item text-muted">
											<a href="../../demo1/dist/index.html"
												class="text-muted text-hover-primary">Home</a>
										</li>
										<!--end::Item-->
										<!--begin::Item-->
										<li class="breadcrumb-item">
											<span class="bullet bg-gray-300 w-5px h-2px"></span>
										</li>
										<!--end::Item-->
										<!--begin::Item-->
										<li class="breadcrumb-item text-muted">eCommerce</li>
										<!--end::Item-->
										<!--begin::Item-->
										<li class="breadcrumb-item">
											<span class="bullet bg-gray-300 w-5px h-2px"></span>
										</li>
										<!--end::Item-->
										<!--begin::Item-->
										<li class="breadcrumb-item text-muted">Catalog</li>
										<!--end::Item-->
										<!--begin::Item-->
										<li class="breadcrumb-item">
											<span class="bullet bg-gray-300 w-5px h-2px"></span>
										</li>
										<!--end::Item-->
										<!--begin::Item-->
										<li class="breadcrumb-item text-dark">Products</li>
										<!--end::Item-->
									</ul>
									<!--end::Breadcrumb-->
								</div>
								<!--end::Page title-->
							</div>
							<!--end::Container-->
						</div>
						<!--end::Toolbar-->
						<!--begin::Post-->
						<div class="post d-flex flex-column-fluid" id="kt_post">
							<!--begin::Container-->
							<div id="kt_content_container" class="container-xxl">
								<!--begin::Products-->
								<div class="card card-flush">
									<!--begin::Card header-->
									<div class="card-header align-items-center py-5 gap-2 gap-md-5">
										<!--begin::Card toolbar-->
										<div class="card-toolbar flex-row-fluid justify-content-end gap-5">
											<div class="w-100 mw-150px">
												<% if (data.role> 1) { %>
													<!--begin::Select2-->
													<form action="/products" method="post">
														<select class="form-select form-select-solid"
															data-control="select2" data-hide-search="true"
															data-placeholder="Status"
															data-kt-ecommerce-product-filter="status" name="status"
															onchange="this.form.submit()">
															<option></option>
															<option value="All">All</option>
															<% data.status.forEach(e=> { %>
																<option value="<%= e.status_name %>"
																	<%=(data.stat===e.status_name) ? 'selected' : '' %>
																	>
																	<%= e.status_name %>
																</option>
																<% }) %>
														</select>
													</form>
													<!--end::Select2-->
													<% } %>
											</div>
											<% if (data.role> 1) { %>
												<!--begin::Add product-->
												<a href="/products/add" class="btn btn-primary">Add Product</a>
												<!--end::Add product-->
												<% } else { %>
													<% if (data.role===1) { %>
														<!--begin::Add order-->
														<a href="/orders/myOrders" class="btn btn-primary">My Orders</a>
														<!--end::Add order-->
														<% } %>
															<!--begin::Add order-->
															<a href="<%= (data.role === 0)? '/login' : '/orders' %> "
																class="btn btn-primary">Add Order</a>
															<!--end::Add order-->
															<% } %>
										</div>
										<!--end::Card toolbar-->
									</div>
									<!--end::Card header-->
									<!--begin::Card body-->
									<div class="card-body pt-0">
										<!--begin::Table-->
										<table class="table align-middle table-row-dashed fs-6 gy-5"
											id="kt_ecommerce_products_table">
											<!--begin::Table head-->
											<thead>
												<!--begin::Table row-->
												<tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
													<th class="w-10px pe-2">
														#
													</th>
													<th class="min-w-200px">Product</th>
													<th class="text-end min-w-70px">Brand</th>
													<th class="text-end min-w-70px">Stock</th>
													<th class="text-end min-w-100px">Price</th>
													<% if (data.role> 1) { %>
														<th class="text-end min-w-100px">Status</th>
														<th class="text-end min-w-70px">Actions</th>
														<% } %>
												</tr>
												<!--end::Table row-->
											</thead>
											<!--end::Table head-->
											<!--begin::Table body-->
											<tbody class="fw-bold text-gray-600">
												<% data.products.forEach((e,i)=> {i++ %>
													<!--begin::Modal-->
													<div class="modal fade" id="modal_<%= e.id %>" tabindex="-1"
														aria-hidden="true">
														<!--begin::Modal dialog-->
														<div class="modal-dialog modal-dialog-centered mw-900px">
															<!--begin::Modal content-->
															<div class="modal-content">
																<!--begin::Modal header-->
																<div class="modal-header">
																	<!--begin::Modal title-->
																	<h2 class="mx-auto">
																		<%= e.product_name %>
																	</h2>
																	<!--end::Modal title-->
																	<!--begin::Close-->
																	<div class="btn btn-sm btn-icon btn-active-color-primary"
																		data-bs-dismiss="modal">
																		<!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
																		<span class="svg-icon svg-icon-1">
																			<svg xmlns="http://www.w3.org/2000/svg"
																				width="24" height="24"
																				viewBox="0 0 24 24" fill="none">
																				<rect opacity="0.5" x="6" y="17.3137"
																					width="16" height="2" rx="1"
																					transform="rotate(-45 6 17.3137)"
																					fill="currentColor" />
																				<rect x="7.41422" y="6" width="16"
																					height="2" rx="1"
																					transform="rotate(45 7.41422 6)"
																					fill="currentColor" />
																			</svg>
																		</span>
																		<!--end::Svg Icon-->
																	</div>
																	<!--end::Close-->
																</div>
																<!--end::Modal header-->
																<!--begin::Modal body-->
																<div class="modal-body py-lg-10 px-lg-10 mx-auto">
																	<img src="uploads/img/product/<%= e.image %>"
																		alt="">
																</div>
																<!--end::Modal body-->
															</div>
															<!--end::Modal content-->
														</div>
														<!--end::Modal dialog-->
													</div>
													<!--end::Modal-->
													<!--begin::Table row-->
													<tr>
														<td>
															<%= i %>
														</td>
														<!--begin::Category=-->
														<td>
															<div class="d-flex align-items-center">
																<!--begin::Thumbnail-->
																<input type="hidden" name="id" value="<%= e.id %> ">
																<a class="menu-link px-3 symbol symbol-50px"
																	style="cursor: pointer;" data-bs-toggle="modal"
																	data-bs-target="#modal_<%= e.id %>">
																	<img src="/uploads/img/product/<%= e.image %> "
																		class="symbol-label"
																		alt="<%= e.product_name %>">
																</a>
																<!--end::Thumbnail-->
																<div class="ms-5">
																	<!--begin::Title-->
																	<% if(data.role===0) { %>
																		<input type="hidden" name="id"
																			value="<%= e.id %>">
																		<a class="text-gray-800 text-hover-primary fs-5 fw-bolder mb-1"
																			style="cursor: pointer;" href="/login">
																			<%= e.product_name %>
																		</a>
																		<% } else if (data.role===1) {%>
																			<input type="hidden" name="id"
																				value="<%= e.id %>">
																			<a class="text-gray-800 text-hover-primary fs-5 fw-bolder mb-1"
																				style="cursor: pointer;" href="/orders">
																				<%= e.product_name %>
																			</a>
																			<% } else { %>
																				<form action="/products/edit-form"
																					method="post" id="edit<%= e.id %>">
																					<input type="hidden" name="id"
																						value="<%= e.id %>">
																					<a class="text-gray-800 text-hover-primary fs-5 fw-bolder mb-1"
																						style="cursor: pointer;"
																						onclick="document.getElementById(`edit<%= e.id %>`).submit()">
																						<%= e.product_name %>
																					</a>
																				</form>
																				<% } %>
																					<!--end::Title-->
																</div>
															</div>
														</td>
														<!--end::Category=-->
														<!--begin::Brand=-->
														<td class="text-end pe-0" data-order="25">
															<span class="fw-bolder ms-3">
																<%= e.brand %>
															</span>
														</td>
														<!--end::Brand=-->
														<!--begin::Qty=-->
														<td class="text-end pe-0" data-order="25">
															<span class="fw-bolder ms-3">
																<%= e.quantity %>
															</span>
														</td>
														<!--end::Qty=-->
														<!--begin::Price=-->
														<td class="text-end pe-0">
															<span class="fw-bolder text-dark">
																Rp. <%= Intl.NumberFormat('en-US').format(e.price) %>
															</span>
														</td>
														<!--end::Price=-->
														<% if (data.role> 1) { %>
															<!--begin::Status=-->
															<td class="text-end pe-0" data-order="Published">
																<!--begin::Badges-->
																<div
																	class="badge badge-light-<%= (e.status === 'Published') ? 'success' : 'danger' %> ">
																	<%= e.status %>
																</div>
																<!--end::Badges-->
															</td>
															<!--end::Status=-->
															<!--begin::Action=-->
															<td class="text-end">
																<a href="#"
																	class="btn btn-sm btn-light btn-active-light-primary"
																	data-kt-menu-trigger="click"
																	data-kt-menu-placement="bottom-end">Actions
																	<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
																	<span class="svg-icon svg-icon-5 m-0">
																		<svg xmlns="http://www.w3.org/2000/svg"
																			width="24" height="24" viewBox="0 0 24 24"
																			fill="none">
																			<path
																				d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z"
																				fill="currentColor" />
																		</svg>
																	</span>
																	<!--end::Svg Icon-->
																</a>
																<!--begin::Menu-->
																<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4"
																	data-kt-menu="true">
																	<!--begin::Menu item-->
																	<div class="menu-item px-3">
																		<form action="/products/edit-form" method="post"
																			id="edit<%= e.id %>">
																			<input type="hidden" name="id"
																				value="<%= e.id %>">
																			<a class="menu-link px-3"
																				onclick="document.getElementById('edit<%= e.id %>').submit()">Edit</a>
																		</form>
																	</div>
																	<!--end::Menu item-->
																	<!--begin::Menu item-->
																	<div class="menu-item px-3">
																		<form action="/products/delete" method="post"
																			id="delete<%= e.id %>">
																			<input type="hidden" name="id"
																				value="<%= e.id %>">
																			<a class="menu-link px-3"
																				onclick="document.getElementById('delete<%= e.id %>').submit()">Delete</a>
																		</form>
																	</div>
																	<!--end::Menu item-->
																</div>
																<!--end::Menu-->
															</td>
															<!--end::Action=-->
															<% } %>
													</tr>
													<!--end::Table row-->
													<% }) %>
											</tbody>
											<!--end::Table body-->
										</table>
										<!--end::Table-->
									</div>
									<!--end::Card body-->
								</div>
								<!--end::Products-->
							</div>
							<!--end::Container-->
						</div>
						<!--end::Post-->
					</div>
					<!--end::Content-->
					<!--begin::Footer-->
					<div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
						<!--begin::Container-->
						<div
							class="container-fluid d-flex flex-column flex-md-row align-items-center justify-content-between">
							<!--begin::Copyright-->
							<div class="text-dark order-2 order-md-1">
								<span class="text-muted fw-bold me-1">2022Â©</span>
								<a href="https://keenthemes.com" target="_blank"
									class="text-gray-800 text-hover-primary">Keenthemes</a>
							</div>
							<!--end::Copyright-->
							<!--begin::Menu-->
							<ul class="menu menu-gray-600 menu-hover-primary fw-bold order-1">
								<li class="menu-item">
									<a href="https://keenthemes.com" target="_blank" class="menu-link px-2">About</a>
								</li>
								<li class="menu-item">
									<a href="https://devs.keenthemes.com" target="_blank"
										class="menu-link px-2">Support</a>
								</li>
								<li class="menu-item">
									<a href="https://1.envato.market/EA4JP" target="_blank"
										class="menu-link px-2">Purchase</a>
								</li>
							</ul>
							<!--end::Menu-->
						</div>
						<!--end::Container-->
					</div>
					<!--end::Footer-->
			</div>
			<!--end::Wrapper-->
	</div>
	<!--end::Page-->
</div>
